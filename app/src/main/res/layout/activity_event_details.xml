<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_color"
    android:orientation="vertical"
    tools:context=".details.EventDetailsActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_stars_with_alpha"
        android:orientation="vertical"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_44dp"
        android:layout_marginBottom="@dimen/dp_size_32dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/activity_event_details_button_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_size_16dp"
            android:background="@drawable/ic_arrow_back"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/img_kolesa_conf_logo"
            />
        <ImageView
            android:id="@+id/activity_event_details_image_view_to_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/dp_size_16dp"
            android:background="@drawable/ic_details_favorite_border"
            android:clickable="true"
            android:focusable="true"
            />
        <ProgressBar
            android:id="@+id/detail_events_activity_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_16dp"
            android:visibility="visible"
            />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_size_32dp"
            >
            <ImageView
                android:id="@+id/activity_event_details_image_view_speaker_photo"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                />
            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_is_invited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_size_16dp"
                android:layout_marginTop="@dimen/dp_size_16dp"
                android:background="@drawable/bg_button_enabled"
                android:paddingHorizontal="@dimen/dp_size_4dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_13sp"
                />
            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_size_16dp"
                android:layout_marginTop="@dimen/dp_size_8dp"
                android:padding="@dimen/dp_size_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_18sp"
                />
            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_size_16dp"
                android:padding="@dimen/dp_size_5dp"
                android:textColor="@color/additional_white_color"
                android:textSize="@dimen/sp_size_13sp"
                />
            <View
                style="@style/Divider"
                android:layout_marginTop="@dimen/dp_size_16dp"
                />
            <TextView
                android:id="@+id/activity_event_details_text_view_time_and_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_size_16dp"
                android:layout_marginTop="@dimen/dp_size_8dp"
                android:padding="@dimen/dp_size_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_14sp"
                />
            <View
                style="@style/Divider"
                android:layout_marginTop="@dimen/dp_size_8dp"
                />
            <TextView
                android:id="@+id/activity_event_details_text_view_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_size_16dp"
                android:layout_marginTop="@dimen/dp_size_16dp"
                android:lineSpacingExtra="@dimen/dp_size_8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_18sp"
                />
            <TextView
                android:id="@+id/activity_event_details_text_view_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_size_16dp"
                android:layout_marginTop="@dimen/dp_size_8dp"
                android:layout_marginBottom="@dimen/dp_size_16dp"
                android:lineSpacingExtra="@dimen/dp_size_8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_14sp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</LinearLayout>
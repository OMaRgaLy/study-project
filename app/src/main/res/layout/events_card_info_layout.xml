<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card"
    android:layout_width="@dimen/dp_size_280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_events_card_info"
    android:paddingHorizontal="@dimen/dp_size_16dp"
    android:paddingTop="@dimen/dp_size_4dp"
    android:paddingBottom="@dimen/dp_size_16dp"
    >
    <TextView
        android:id="@+id/events_state_flag_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_enabled"
        android:minHeight="@dimen/dp_size_16dp"
        android:paddingHorizontal="@dimen/dp_size_4dp"
        android:text="@string/next_upcoming_event"
        android:textColor="#FAFAFA"
        android:textSize="@dimen/sp_size_13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/events_time_and_place_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_8dp"
        android:minHeight="@dimen/dp_size_22dp"
        tools:text="18:00-19:00"
        android:textColor="@color/primary_gray_color"
        android:textSize="@dimen/sp_size_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/events_state_flag_text_view"
        />
    <ImageView
        android:id="@+id/to_favorite_short_image_button"
        android:layout_width="@dimen/dp_size_22dp"
        android:layout_height="@dimen/dp_size_22dp"
        android:src="@drawable/ic_favorite_border"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/events_time_and_place_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/events_time_and_place_text_view"
        />
    <TextView
        android:id="@+id/events_speaker_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_8dp"
        android:minHeight="@dimen/dp_size_22dp"
        tools:text="Linus Torvalds"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/events_time_and_place_text_view"
        />
        <TextView
        android:id="@+id/events_speaker_job_place_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_30dp"
        android:minHeight="@dimen/dp_size_20dp"
        tools:text="Creator of Linux Core"
        android:textColor="@color/primary_gray_color"
        android:textSize="@dimen/sp_size_13sp"
        android:minLines="2"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/events_time_and_place_text_view"
        />
    <TextView
        android:id="@+id/events_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_8dp"
        android:minHeight="@dimen/dp_size_22dp"
        tools:text="How to support one core and improve the whole World"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_14sp"
        android:minLines="3"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/events_speaker_job_place_text_view"
        />
</androidx.constraintlayout.widget.ConstraintLayout>